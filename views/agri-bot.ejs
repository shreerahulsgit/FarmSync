<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AgriBot - AI Chatbot for Agriculture</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #1a1a1a;
            color: #ffffff;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .chat-container {
            width: 100%;
            max-width: 1200px;
            height: 100vh;
            max-height: 900px;
            display: flex;
            flex-direction: column;
            background-color: #222222;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        }

        .chat-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background-color: #2d2d2d;
            border-bottom: 1px solid #3a3a3a;
        }

        .logo {
            font-size: 20px;
            font-weight: bold;
            color: #ffffff;
        }

        .logo i {
            color: #4caf50;
            margin-right: 8px;
        }

        .header-actions {
            display: flex;
            gap: 10px;
        }

        .header-btn {
            background: none;
            border: none;
            color: #ffffff;
            font-size: 18px;
            cursor: pointer;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: background-color 0.3s;
        }

        .header-btn:hover {
            background-color: #3a3a3a;
        }

        .welcome-section {
            text-align: center;
            padding: 40px 20px;
        }

        .welcome-section h1 {
            font-size: 32px;
            margin-bottom: 10px;
        }

        .welcome-section p {
            font-size: 18px;
            color: #b0b0b0;
        }

        .user-name {
            color: #4caf50;
        }

        .chat-messages {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .message {
            display: flex;
            margin-bottom: 15px;
            animation: fadeIn 0.3s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .user-message {
            flex-direction: row-reverse;
        }

        .bot-message {
            flex-direction: row;
        }

        .bot-avatar {
            width: 40px;
            height: 40px;
            background-color: #4caf50;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-right: 12px;
        }

        .message-content {
            max-width: 70%;
            padding: 15px;
            border-radius: 18px;
            position: relative;
        }

        .user-message .message-content {
            background-color: #2979ff;
            border-bottom-right-radius: 5px;
            margin-right: 10px;
        }

        .bot-message .message-content {
            background-color: #424242;
            border-bottom-left-radius: 5px;
        }

        .message-content p {
            line-height: 1.5;
        }

        .message-actions {
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 5px;
            opacity: 0;
            transition: opacity 0.2s;
        }

        .user-message:hover .message-actions {
            opacity: 1;
        }

        .edit-btn, .delete-btn {
            background: none;
            border: none;
            color: #b0b0b0;
            cursor: pointer;
            font-size: 14px;
            transition: color 0.2s;
        }

        .edit-btn:hover, .delete-btn:hover {
            color: #ffffff;
        }

        .input-container {
            padding: 20px;
            background-color: #222222;
        }

        .input-wrapper {
            display: flex;
            align-items: center;
            background-color: #2d2d2d;
            border-radius: 30px;
            padding: 8px 15px;
            margin-bottom: 15px;
        }

        .attachment-btn {
            background: none;
            border: none;
            color: #b0b0b0;
            cursor: pointer;
            margin-right: 10px;
            font-size: 16px;
            transition: color 0.2s;
        }

        .attachment-btn:hover {
            color: #ffffff;
        }

        #userInput {
            flex: 1;
            background: none;
            border: none;
            color: #ffffff;
            font-size: 16px;
            padding: 10px;
            outline: none;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        #searchBtn, #thinkBtn {
            background: none;
            border: none;
            color: #b0b0b0;
            cursor: pointer;
            padding: 8px 12px;
            border-radius: 20px;
            transition: all 0.2s;
        }

        #searchBtn i, #thinkBtn i {
            margin-right: 5px;
        }

        #searchBtn:hover, #thinkBtn:hover {
            background-color: #3a3a3a;
            color: #ffffff;
        }

        #sendBtn {
            background-color: #4caf50;
            border: none;
            color: white;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            cursor: pointer;
            margin-left: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            transition: background-color 0.2s;
        }

        #sendBtn:hover {
            background-color: #3b9c3f;
        }

        .feature-buttons {
            display: flex;
            gap: 10px;
            overflow-x: auto;
            padding: 5px 0;
        }

        .feature-btn {
            background: none;
            border: 1px solid #3a3a3a;
            color: #ffffff;
            border-radius: 20px;
            padding: 8px 15px;
            white-space: nowrap;
            cursor: pointer;
            transition: all 0.2s;
        }

        .feature-btn i {
            margin-right: 5px;
        }

        .feature-btn:hover {
            background-color: #3a3a3a;
        }

        @media (max-width: 768px) {
            .chat-container {
                height: 100vh;
                max-height: none;
                border-radius: 0;
            }

            .welcome-section h1 {
                font-size: 24px;
            }

            .welcome-section p {
                font-size: 16px;
            }

            .message-content {
                max-width: 85%;
            }
            
            .action-buttons {
                display: none;
            }
            
            .feature-buttons {
                flex-wrap: nowrap;
                overflow-x: auto;
            }
        }

        @media (max-width: 480px) {
            .chat-header {
                padding: 10px;
            }
            
            .logo {
                font-size: 16px;
            }
            
            .header-btn {
                width: 35px;
                height: 35px;
                font-size: 16px;
            }
            
            .welcome-section {
                padding: 20px 10px;
            }
            
            .welcome-section h1 {
                font-size: 20px;
            }
            
            .welcome-section p {
                font-size: 14px;
            }
            
            .message-content {
                padding: 10px;
            }
            
            .input-wrapper {
                padding: 5px 10px;
            }
            
            #userInput {
                font-size: 14px;
                padding: 8px;
            }
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">
            <div class="logo">
                <i class="fas fa-leaf"></i> AgriBot
            </div>
            <div class="header-actions">
                <button class="header-btn notification-btn">
                    <i class="far fa-bell"></i>
                </button>
                <button class="header-btn settings-btn">
                    <i class="fas fa-cog"></i>
                </button>
                <button class="header-btn user-btn">
                    <i class="fas fa-user-circle"></i>
                </button>
            </div>
        </div>

        <div class="welcome-section">
            <h1>welcome, <span class="user-name">User</span>.</h1>
            <p>How can I help you today?</p>
        </div>

        <div class="chat-messages" id="chatMessages">
        </div>

        <div class="input-container">
            <div class="input-wrapper">
                <button class="attachment-btn">
                    <i class="fas fa-paperclip"></i>
                </button>
                <input type="text" id="userInput" placeholder="What do you want to know?">
                <div class="action-buttons">
                    <button id="searchBtn">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <button id="thinkBtn">
                        <i class="fas fa-brain"></i> Think
                    </button>
                </div>
                <button id="sendBtn">
                    <i class="fas fa-arrow-up"></i>
                </button>
            </div>
            <div class="feature-buttons">
                <button class="feature-btn">
                    <i class="fas fa-flask"></i> Research
                </button>
                <button class="feature-btn">
                    <i class="fas fa-lightbulb"></i> How to
                </button>
                <button class="feature-btn">
                    <i class="fas fa-chart-bar"></i> Analyze
                </button>
                <button class="feature-btn">
                    <i class="fas fa-image"></i> Create images
                </button>
                <button class="feature-btn">
                    <i class="fas fa-code"></i> Code
                </button>
            </div>
        </div>
    </div>

    <template id="userMessageTemplate">
        <div class="message user-message">
            <div class="message-content">
                <p></p>
            </div>
            <div class="message-actions">
                <button class="edit-btn"><i class="fas fa-edit"></i></button>
                <button class="delete-btn"><i class="fas fa-trash"></i></button>
            </div>
        </div>
    </template>

    <template id="botMessageTemplate">
        <div class="message bot-message">
            <div class="bot-avatar">
                <i class="fas fa-robot"></i>
            </div>
            <div class="message-content">
                <p></p>
            </div>
        </div>
    </template>

    <script>
        const chatMessages = document.getElementById('chatMessages');
        const userInput = document.getElementById('userInput');
        const sendBtn = document.getElementById('sendBtn');
        const searchBtn = document.getElementById('searchBtn');
        const thinkBtn = document.getElementById('thinkBtn');
        const userMessageTemplate = document.getElementById('userMessageTemplate');
        const botMessageTemplate = document.getElementById('botMessageTemplate');

        document.querySelector('.user-name').textContent = 'Farmer';

        const API_URL = '/api/chat';
        const HISTORY_URL = '/api/history';

        let chatHistory = [];

        async function initChat() {
            try {
                const response = await fetch(HISTORY_URL);
                if (response.ok) {
                    const data = await response.json();
                    chatHistory = data.history || [];
                    
                    chatHistory.forEach(msg => {
                        if (msg.user !== 'bot') {
                            addUserMessage(msg.content, msg.id);
                        } else {
                            addBotMessage(msg.content, msg.id);
                        }
                    });
                    
                    scrollToBottom();
                }
            } catch (error) {
                console.error('Failed to load chat history:', error);
            }
            
            if (chatMessages.children.length === 0) {
                addBotMessage("Hello! I'm your AgriBot assistant. How can I help with your agricultural questions today?");
            }
        }

        function addUserMessage(message, messageId = null) {
            const clone = userMessageTemplate.content.cloneNode(true);
            const messageDiv = clone.querySelector('.user-message');
            const messageContent = clone.querySelector('.message-content p');
            
            messageContent.textContent = message;
            
            if (messageId) {
                messageDiv.dataset.id = messageId;
            } else {
                messageDiv.dataset.id = Date.now().toString();
            }
            
            const editBtn = clone.querySelector('.edit-btn');
            const deleteBtn = clone.querySelector('.delete-btn');
            
            editBtn.addEventListener('click', () => {
                editMessage(messageDiv);
            });
            
            deleteBtn.addEventListener('click', () => {
                deleteMessage(messageDiv);
            });
            
            chatMessages.appendChild(messageDiv);
            scrollToBottom();
            
            return messageDiv;
        }

        function addBotMessage(message, messageId = null) {
            const clone = botMessageTemplate.content.cloneNode(true);
            const messageDiv = clone.querySelector('.bot-message');
            const messageContent = clone.querySelector('.message-content p');
            
            if (messageId) {
                messageDiv.dataset.id = messageId;
            } else {
                messageDiv.dataset.id = Date.now().toString();
            }
            
            const formattedMessage = message
                .replace(/\n\n+/g, '</p><p>') 
                .replace(/\n/g, '<br>'); 
            
            const contentContainer = document.createElement('div');
            contentContainer.innerHTML = `<p>${formattedMessage}</p>`;
            
            Array.from(contentContainer.querySelectorAll('p')).forEach(paragraph => {
                paragraph.innerHTML = paragraph.innerHTML
                    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                    .replace(/\*(.*?)\*/g, '<em>$1</em>');
            });
            
            let html = contentContainer.innerHTML;
            html = html.replace(/```([\s\S]*?)```/g, '<pre><code>$1</code></pre>');
            
            messageContent.innerHTML = html;
            
            chatMessages.appendChild(messageDiv);
            scrollToBottom();
            
            return messageDiv;
        }

        function editMessage(messageDiv) {

        }

        async function deleteMessage(messageDiv) {
            
        }

        async function sendMessage(message) {
            let userMessageDiv;
            
            userMessageDiv = addUserMessage(message);
            
            const loadingDiv = document.createElement('div');
            loadingDiv.className = 'message bot-message loading';
            loadingDiv.innerHTML = `
                <div class="bot-avatar">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="message-content">
                    <p><i class="fas fa-spinner fa-spin"></i> Thinking...</p>
                </div>
            `;
            chatMessages.appendChild(loadingDiv);
            scrollToBottom();
            
            try {
                const response = await fetch(API_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        message: message,
                    })
                });
                
                if (response.ok) {
                    const data = await response.json();
                    
                    loadingDiv.remove();
                    
                    addBotMessage(data.response, data.uid);
                    
                } else {
                    loadingDiv.remove();
                    
                    addBotMessage("I'm sorry, I couldn't process your request. Please try again later.");
                }
            } catch (error) {
                console.error('Error sending message:', error);
                
                loadingDiv.remove();
                
                addBotMessage("I'm sorry, there was an error connecting to the server. Please check your connection and try again.");
            }
        }

        function scrollToBottom() {
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        sendBtn.addEventListener('click', () => {
            const message = userInput.value.trim();
            if (message) {
                sendMessage(message);
                userInput.value = '';
            }
        });

        userInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                const message = userInput.value.trim();
                if (message) {
                    sendMessage(message);
                    userInput.value = '';
                }
            }
        });

        searchBtn.addEventListener('click', () => {
            const message = userInput.value.trim();
            if (message) {
                sendMessage(`search: ${message}`);
                userInput.value = '';
            }
        });

        thinkBtn.addEventListener('click', () => {
            const message = userInput.value.trim();
            if (message) {
                sendMessage(`think: ${message}`);
                userInput.value = '';
            }
        });

        document.addEventListener('DOMContentLoaded', initChat);

    </script>
</body>
</html>